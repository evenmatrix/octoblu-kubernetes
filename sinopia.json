{
  "id": "sinopia-controller",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 4,
    "replicaSelector": {"name": "sinopia"},
    "podTemplate": {
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "sinopia",
          "containers": [{
            "name": "sinopia",
            "image": "drewwells/sinopia",
            "ports": [{"containerPort": 4873}],
            "volumeMounts": [
              {
                "name": "sinopia-config",
                "mountPath": "/etc/sinopia"
              },
              {
                "name": "sinopia-storage",
                "mountPath": "/opt/sinopia/storage"
              }
            ]
          }],
          "volumes": [
            {
              "name": "sinopia-config",
              "source": {
                "hostDir": {
                  "path": "/data/sinopia/config"
                }
              }
            },
            {
              "name": "sinopia-storage",
              "source": {
                "hostDir": {
                  "path": "/data/sinopia/storage"
                }
              }
            }
          ]
        }
      },
      "labels": {
        "name": "sinopia",
        "app": "sinopia"
      }
    }
  },
  "labels": {
    "name": "sinopia"
  }
}
